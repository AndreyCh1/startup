mixin posts (item)
    .post
        figure
            figcaption 
                picture 
                    source(srcset=item.src + ".webp", type="img/webp")
                    img(src=item.src + ".jpg", alt=item.alt)
        div
            .post_header 
                .blog_date
                    p #{item.day_month}
                    p.month #{item.month}
                div 
                    a(href="#") #{item.post_name}
                    p.author By 
                        span #{item.first_name} 
                        |#{item.last_name} in 
                        span #{item.chapter}
            p.post_text #{item.post}
            a(href="#") Read more

