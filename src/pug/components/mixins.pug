mixin menu (items)
    for item in items
        li
            a(class=item.class, href=item.url) #{item.name}

mixin figures (item)
    figure
        figcaption
            .substrate
                picture
                    source(srcset=item.src + ".webp", type="img/webp")
                    img(src=item.src + ".png", alt=item.alt)
            b #{item.card_name}
            p.description #{item.description}

mixin slider (item)
    figure
        figcaption
            picture
                source(srcset=item.src + ".webp", type="img/webp")
                img(src=item.src + ".jpg", alt=item.alt)
            b #{item.employee_name}
            p #{item.job_title}

mixin filter_menu (items)
    for item in items
        li
            a(href=item.url) #{item.name}

